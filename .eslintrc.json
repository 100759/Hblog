{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "xo",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "ignorePatterns": [
        "!.vitepress"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx",
                "*.vue"
            ],
            "rules": {
                "@typescript-eslint/indent": [
                    "error",
                    2
                ],
                "@typescript-eslint/object-curly-spacing": [
                    "error",
                    "always"
                ],
                "@typescript-eslint/quotes": [
                    "error",
                    "double",
                    {
                        "avoidEscape": true
                    }
                ]
            },
            "parserOptions": {
                "project": "./tsconfig.eslint.json"
            }
        }
    ]
}
